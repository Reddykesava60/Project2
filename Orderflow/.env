# ============================================
# DJANGO BACKEND CONFIGURATION
# ============================================

# Debug Mode (set to False in production)
DEBUG=True

# Security
SECRET_KEY=django-insecure-dev-key-change-in-production

# Database Configuration - Using SQLite for local development
USE_SQLITE=True

# Database credentials (ignored when USE_SQLITE=True)
DB_NAME=dineflow2
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_ALL_ORIGINS=False

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Token Lifetimes (in minutes)
ACCESS_TOKEN_LIFETIME=60
REFRESH_TOKEN_LIFETIME=1440

# QR Code
QR_HMAC_SECRET=dev-qr-secret-change-in-production

# Razorpay (Test Mode - Force Success for Local Development)
RAZORPAY_KEY_ID=rzp_test_1234567890
RAZORPAY_KEY_SECRET=secret123456789
RAZORPAY_WEBHOOK_SECRET=webhook-secret-123
RAZORPAY_FORCE_SUCCESS=True

# Email (console backend for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@dineflow.com

# Logging
DJANGO_LOG_LEVEL=INFO

# Timezone
DEFAULT_TIMEZONE=Asia/Kolkata

# Currency
DEFAULT_CURRENCY=INR

# ============================================
# FRONTEND CONFIGURATION
# ============================================

NEXT_PUBLIC_API_URL=http://127.0.0.1:8000/api
NEXT_PUBLIC_PUBLIC_API_URL=http://127.0.0.1:8000/api/public

# Backend URL for Next.js API routes
BACKEND_URL=http://127.0.0.1:8000

# Environment
NODE_ENV=development
