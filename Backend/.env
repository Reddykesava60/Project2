python manage.py runserver 8000# DineFlow2 Backend Environment Variables
# Copy this file to .env and fill in the values

# ===== Django Settings =====
DEBUG=True
# SECRET_KEY=your-secret-key-here-generate-with-django-get-random-secret-key
SECRET_KEY=django-insecure-dev-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com


USE_SQLITE=true

# ===== Database - PostgreSQL =====
# DATABASE_URL=postgres://postgres:password@localhost:5432/dineflow2
# Or use individual settings:
DB_NAME=dineflow2
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# ===== CORS Settings =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# ===== JWT Settings (in minutes) =====
ACCESS_TOKEN_LIFETIME=60
REFRESH_TOKEN_LIFETIME=1440

# ===== QR Code Security =====
# HMAC Secret for signing QR codes - MUST be strong random string
QR_HMAC_SECRET=your-qr-hmac-secret-min-32-chars-generate-securely

# ===== Payment Gateway - Razorpay =====
# Get credentials from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
# Set to True in production with live keys
RAZORPAY_LIVE_MODE=False

# ===== Payment Gateway - Stripe (Alternative) =====
# Uncomment if using Stripe instead
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Email Settings =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ===== Frontend URL =====
FRONTEND_URL=http://localhost:3000

# ===== Regional Settings =====
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# ===== Error Monitoring (Optional) =====
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== CDN / Object Storage (Production) =====
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=ap-south-1
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com

# ===== Rate Limiting =====
# Default rates (requests per hour)
RATE_LIMIT_ANON=100
RATE_LIMIT_USER=1000
